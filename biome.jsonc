{
    "$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
    "overrides": [
        {
            "includes": ["./.vscode/*.json", "**/*.jsonc"],
            "json": {
                "formatter": {
                    "trailingCommas": "all",
                    "indentStyle": "space",
                    "indentWidth": 4,
                },
                "parser": {
                    "allowComments": true,
                    "allowTrailingCommas": true,
                },
            },
        },
    ],
}
